<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Livello2Activity" >

    <TextView
        android:id="@+id/textViewLv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lv2"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageViewLv2"
        android:layout_width="300sp"
        android:layout_height="300sp" 
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"  
        android:clickable="false"
        android:contentDescription="@string/fuoco"
        android:src="@drawable/fuoco" />

    <Button
        android:id="@+id/button1_lv2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/stop" />

    <Button
        android:id="@+id/button2_lv2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1_lv2"
        android:layout_alignBottom="@+id/button1_lv2"
        android:layout_alignLeft="@+id/imageViewLv2"
        android:onClick="@string/start"
        android:text="@string/start" />

</RelativeLayout>